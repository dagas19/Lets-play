<div class="banner-events">
  <h1>Let's Play</h1>
</div>
<div class="container-e pl-3 pr-3">
  <div class="row">
    <div class="col-7">
      <%= render "shared/card" %>
    </div>
    <div class="col-5">
      <div class="filter">
        <div class="tfil d-flex justify-content-between align-items-center form-inline">
          <div class="inner-addon left-addon d-flex">
            <label for="cit" class="labe" >Search</label>
            <i class="fas fa-search"></i>
            <input type="text" id="cit" class="form-control sear" placeholder="City" />
          </div>
          <div class="sorr">
            <p>Sort by method</p>
          </div>
        </div>
        <div class="bot-fil d-flex">
          <div class="all">
            <h3>Preffered games</h3>
            <div class="list-t">
             <div>
                <input class="checkbox-budget" type="radio" name="budget" id="budget-1">
                <label class="for-checkbox-budget" for="budget-1">
                  <span >Strategy</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-2">
                <label class="for-checkbox-budget" for="budget-2">
                  <span >Betrayl</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-3">
                <label class="for-checkbox-budget" for="budget-3">
                  <span >Puzzle</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-4">
                <label class="for-checkbox-budget" for="budget-4">
                  <span >Adventure</span>
                </label>
              </div>
            </div>
          </div>
          <div class="gametype">
              <h3>Date around</h3>
             <div class="list-t">
             <div>
                <input class="checkbox-budget" type="radio" name="budget" id="budget-5">
                <label class="for-checkbox-budget" for="budget-5">
                  <span>Today</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-6">
                <label class="for-checkbox-budget" for="budget-6">
                  <span>This week</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-7">
                <label class="for-checkbox-budget" for="budget-7">
                  <span>This weekend</span>
                </label><!--
                --><input class="checkbox-budget" type="radio" name="budget" id="budget-8">
                <label class="for-checkbox-budget" for="budget-8">
                  <span>All</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="sticky-top"id="map" style="width: 800px; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>

