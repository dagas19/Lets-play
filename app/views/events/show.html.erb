<div class="bck d-flex justify-content-center align-items-center">
  <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="card mb-3" style="max-width: 1500px;border-radius: 15px;max-height:600px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="https://cdn.cnn.com/cnnnext/dam/assets/200421100635-underscored-best-board-games-lead-live-video.jpg" alt="" class="bd-placeholder-img ii" width="100%" height="250" border-radius="10">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= @event.title %></h5>
                  <p class="card-text"><%= @event.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <div class="card" style="width: 340px; border-radius: 15px;max-height:350px;">
            <div class="card-body">
              <h5 class="card-title"><%= @event.game.name %></h5>
            </div>
            <img class="bd-placeholder-img ii" src="https://www.kroger.com/product/images/xlarge/front/0077898853132" alt="Card image cap" width="100%" height="250" border-radius="10">
          </div>
        </div>
        <div class="col-8">
          <div class="card mb-3" style="max-width: 740px;border-radius: 15px;max-height:350px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="https://texashillcountry.com/wp-content/uploads/11836712_738774506250645_1580314188759681459_n-680x390.jpg" alt="img" class="bd-placeholder-img ii" width="100%" height="250" border-radius="10">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= @event.venue.name %></h5>
                  <p class="card-text"><%= @event.venue.address %></p>
                  <p class="card-text"><%= @event.venue.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
