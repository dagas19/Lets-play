<div class="bannerr d-flex justify-content-center align-items-center">
</div>
<div class="wrapper">
  <div class="bck d-flex justify-content-center align-items-center">
  <div class="ttt text-center">
      <h1 class="display-1 gg text-primary">Join an event</h1>
  </div>
    <div class="container dd">
        <div class="row">
          <div class="col-12">
            <div class="card pin mb-3" style="max-width: 1500px;border-radius: 15px;max-height:600px;">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <img src="https://cdn.cnn.com/cnnnext/dam/assets/200421100635-underscored-best-board-games-lead-live-video.jpg" alt="" class="bd-placeholder-img ii" width="100%" height="250" border-radius="10">
                </div>
                <div class="col-md-8">
                  <div class="card-body ccc d-flex justify-content-between">
                    <div>
                      <h5 class="card-title"><%= @event.title %></h5>
                      <p class="card-text" style="max-width: 550px;"><%= @event.description %></p>
                      <p >Spots left <%= @event.spots - @event.registrations.count %></p>
                    </div>
                    <div class="d-flex">
                      <time datetime="@event.date.strftime(%d %m %Y')" class="icon">
                        <em><%= @event.date.strftime("%A") %></em>
                        <strong><%= @event.date.strftime("%B")%></strong>
                        <span><%= (@event.date + 6).strftime('%y') %></span>
                      </time>
                    </div>
                    <% if (@event.registrations.pluck(:user_id).include?(current_user.id)) || (@event.spots < @event.registrations.count) %>
                    <div class="btn btn-secondary text-align-left bottom-right">
                      Join an event
                    </div>
                    <% else %>
                    <div class="text-align-left">
                      <%= link_to "Join an event", event_registrations_path(@event.id), method: :post, class: "btn btn-lg btn-primary bottom-right" %>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <div class="card pin" style="width: 340px; border-radius: 15px;max-height:350px;">
              <img class="bd-placeholder-img ii" src="https://www.noblecollection.com/Galleria/1/PRP-JU-3531-Large.jpg" alt="Card image cap" width="100%" height="250" border-radius="10">
            </div>
          </div>
          <div class="col-8">
            <div class="card pin mb-3" style="max-width: 740px;border-radius: 15px;max-height:350px;">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <img src="https://texashillcountry.com/wp-content/uploads/11836712_738774506250645_1580314188759681459_n-680x390.jpg" alt="img" class="bd-placeholder-img ii" width="100%" height="250" border-radius="10">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= @event.venue.name %></h5>
                    <p class="card-text"><%= @event.venue.address %></p>
                    <p class="card-text"><%= @event.venue.description %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="chat-container">
              <div id="messages" data-event-id="<%= @event.id %>">
                <% @event.messages.each do |message| %>
                  <%= render "messages/message", message: message %>
                <% end %>
              </div>
                <%= simple_form_for [ @event, @message ] do |f| %>
                  <%= f.input :content,as: :string,
                                   wrapper: false,
                                   label: false,
                                   input_html: {
                                     class: 'chat-input-area__input'
                                   }, label: false, placeholder: "Message ##{@event.title}" %>
                  <%= f.submit value: " ", class: "chat-input-area__submit-button" %>
                  <% end %>
              </div>


      </div>
            </div>

          </div>
        </div>
      </div>
  </div>
    <i class="fas fa-dice"></i>
</div>
