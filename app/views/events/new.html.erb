<div class="wrapper rapas">
  <div class="back">

  </div>

<div class="formike d-flex align-items-left">
  <div class="container left">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="form text-white p-4">
          <h1 class="text-center">Add new event</h1>
          <%= simple_form_for @event do |f| %>
           <%= f.error_notification %>
           <%= f.input :title, placeholder: "e.g. Chess duel" %>
           <div class="row">
            <div class="col-4">
              <%= f.association :game, required: true, prompt: :translate  %>
            </div>
            <div class="col-4">
              <%= f.association :venue, required: true, prompt: :translate  %>
            </div>
            <div class="col-4">
              <%= f.input :spots, placeholder: "e.g. 2" %>
            </div>
          </div>
           <div class="row">
            <div class="col-4">
               <%= f.input :min_age, placeholder: "25" %>
            </div>
            <div class="col-4">
               <%= f.input :max_age, placeholder: "30" %>
            </div>
            <div class="col-4" style="line-height: 32px;">
              Choose date and time*<br>
               <%= f.text_field :date, data: { behavior: "flatpickr" }, label: 'Choose date and time', placeholder: 'Date and Time', class: "form-control" %>
            </div>
          </div>
           <%= f.association :gender, required: true, prompt: :translate  %>
           <%= f.input :experience_level, collection: Event::EXPERIENCE, prompt: :translate %>
           <%= f.input :description, placeholder: "e.g Just looking for someone to play game of chess" %>
           <%= f.submit class: "btn btn-primary btn-lg btn-block", style: "border-radius:10px;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
