<div class="navbar navbar-expand-sm navbar-background navbar-lewagon navbar-height">
  <%= link_to "#", class: "navbar-brand" do %>
    <i class="fas fa-chess-rook text-primary navbar-rook mt-4"></i>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto mt-4">
      <% if user_signed_in? %>
        <h5>
        <li class="nav-item active">
          <%= link_to "All events", events_path, class: "btn btn-outline-primary button-navbar mr-3" %>
        </li>
        </h5>
        <h5>
        <li class="nav-item active">
          <%= link_to "Create event", new_my_event_path, class: "btn btn-outline-primary button-navbar mr-3" %>
        </li>
      </h5>
        <h5>
        <li class="nav-item">
          <%= link_to "My events", my_events_path, class: "btn btn-outline-primary button-navbar navbar-margin-right" %>
        </li>
      </h5>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-square-navbar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" id="avatar-dropdown" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", me_path, class: "dropdown-item navbar-dropdown-text" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item navbar-dropdown-text" %>
          </div>
        </li>
      <% else %>
      <h5>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary button-navbar" %>
        </li>
      </h5>
      <% end %>
    </ul>
  </div>
</div>
