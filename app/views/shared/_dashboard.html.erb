<div class="text-center py-5">Click card for further details</div>
<% @events.each do |event| %>
  <div class="row dashboardEvent" style="display:none;" data-eventID="<%= event.id %>">
    <div class="col-12 text-center pt-3 pb-5"><h4><%= event.title %></h4></div>
    <div class="col-12">
      <div class="row d-flex justify-content-center">
        <div class="col-5 text-center my-1">Game</div>
        <div class="col-5 my-1"><%= event.game.name %></div>
        <div class="col-5 text-center my-1">Venue</div>
        <div class="col-5 my-1"> <%= event.venue.name %>, <%= event.venue.address %></div>
        <div class="col-5 text-center my-1">Date</div>
        <div class="col-5 my-1"><%= event.date.strftime("%^A %-d %^B %Y") %></div>
        <div class="col-5 text-center my-1">Time</div>
        <div class="col-5 my-1"><%= event.date.strftime("%k:%M HRS") %></div>
      </div>
    </div>
    <div class="col-12">
      <h5 class="text-center text-uppercase mt-5">participants</h5>
        <div class="row d-flex justify-content-center mt-1">
          <div class="col-10 player-groups py-5">
              <div class="row d-flex justify-content-center">
                  <% event.participants.each do |participant| %>
                    <div class="col-5 plaque py-1">
                      <div class="row d-flex justify-content-center">
                        <div class="col-2 pl-3 pr-0"><%= cl_image_tag participant.photo.key, class: 'small-avatar' %></div>
                        <div class="col-8 nametag mb-0"><p><%= participant.nickname %></p></div>
                      </div>
                    </div>
                  <% end %>
              </div>
          </div>
        </div>
    </div>
<!--     <div class="col-12 text-center update-info">
      <p>Last update:</p>
      <p><span>3 Hrs ago... :</span> TimT joined</p>
    </div> -->
    <div class="col-12 text-center d-flex justify-content-center mt-5">
      <button class="btn btn-primary">Edit Event</button>
    </div>
  </div>
  <% end %>
