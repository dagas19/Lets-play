<div class="container-fluid m-0 p-0">
  <div class="page-banner d-flex justify-content-center align-items-center">
    <div class="backlit">
      <p>Let's Play</p>
      <!-- <div class="backlit-box"></div> -->
    </div>
  </div>
</div>
<div class="container-fluid m-0 p-0">
  <div class="row">
    <div class="col-7 pl-5 pr-5 mr-0 results">
      <div class="results-pane">
        <div class="results-header pt-3 pb-3 pl-2 mt-3">
          <h2 class="text-uppercase">Your Upcoming <span class="pink">Games</span></h2>
          <hr>
        </div>
        <div class="results-output">
          <div class="results-grouping mb-5">
            <div class="results-grouping-title pl-2 mb-4">
              <h3 class="text-uppercase"><!-- Next 24 hrs --></h3>
            </div>
            <%= render "shared/card" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5 ml-0">
      <div class="filter-pane">
        <%= render "shared/chat" %>
      </div>
    </div>
  </div>
</div>
