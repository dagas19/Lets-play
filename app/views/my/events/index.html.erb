<div class="container-fluid m-0 p-0">
  <div class="page-banner d-flex justify-content-center align-items-center">
    <div class="backlit">
      <p>Dashboard</p>
      <!-- <div class="backlit-box"></div> -->
    </div>
  </div>
</div>
<div class="container-fluid m-0 px-0">
  <div class="row">
    <div class="col-7 results">
      <div class="results-pane">
        <div class="results-header">
          <h2 class="text-uppercase text-center pt-3 pb-2">Upcoming <span class="pink">Games</span></h2>
        </div>
        <div class="results-tabs d-flex">
          <h4 class="text-uppercase text-center pt-3 pb-4"><span class="inactive">hosting</span> | <span class="pink text-uppercase"> joining</span></h4>
        </div>

        <div class="results-output">
          <div class="row pt-3 d-flex justify-content-center">
            <div class="col-10">
              <%= render "shared/card" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5 pl-0 filter-pane">
      <div class="row">3
        <div class="col-12 text-center pt-3 pb-5"><h4>Chess Charity Tournament</h4></div>
        <div class="col-12">
          <div class="row d-flex justify-content-center">
            <div class="col-5 text-center my-1">Game</div>
            <div class="col-5 my-1">Chess</div>
            <div class="col-5 text-center my-1">Venue</div>
            <div class="col-5 my-1">De La Salle Club, SW16 9UK, Oxford</div>
            <div class="col-5 text-center my-1">Date</div>
            <div class="col-5 my-1">Monday 18th October 2020</div>
            <div class="col-5 text-center my-1">Time</div>
            <div class="col-5 my-1">17:00hrs</div>
          </div>
        </div>
        <div class="col-12">
          <%= render "shared/players" %>
        </div>
        <div class="col-12 text-center update-info">
          <p>Last update:</p>
          <p><span>3 Hrs ago</span> TimT joined</p>
        </div>
        <div class="col-12 text-center d-flex justify-content-center">
          <button class="btn btn-primary">Edit Event</button>
        </div>
      </div>
    </div>
  </div>
</div>
